<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:background="@drawable/table_border"
            android:layout_marginBottom="-1dp"
            android:id="@+id/row_gridview_layout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/gridview_sub_title"
                android:layout_weight="0.5"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:gravity="center_vertical" android:textSize="15dp"/>

            <TextView
                android:id="@+id/gridview_sub_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical|center_horizontal"
                android:text="New Text"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/gridview_sub_value_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical|center_horizontal"
                android:text="New Text"
                android:textSize="15dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/gridview_sub_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="0.1"
                android:padding="1dp"
                android:src="@drawable/icon_body_circle_gr_16x16"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/gridview_center_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/icon_body_circle_gr_16x16"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_swc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <Switch
                    android:id="@+id/gridview_sub_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/gridview_sub_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:id="@+id/ll_button"
                android:visibility="gone"
                android:layout_margin="1dp" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="OFF"
                    android:id="@+id/gridview_sub_button" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>