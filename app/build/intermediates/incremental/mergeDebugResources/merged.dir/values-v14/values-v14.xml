<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent_green">#97e08f</color>
    <color name="actionbar_title_background">#EB5405</color>
    <color name="actionbar_title_background_base">#173660</color>
    <color name="dialog_button_background_color">#3F3F3F</color>
    <color name="gridview_background_color_even">#f0f0f0</color>
    <color name="gridview_background_color_odd">#f0f0f0</color>
    <color name="gridview_background_color_set">#CFCECE</color>
    <color name="stacked_green">#808080</color>
    <color name="tab_highlight">#ff9ecfbf</color>
    <color name="transparent">#00000000</color>
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_title_background</item>
        <item name="android:backgroundStacked">@color/stacked_green</item>
        <item name="android:backgroundSplit">@color/actionbar_title_background</item>

    </style>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
    <style name="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <!--<item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>-->
        <!--<item name="android:textColor">#FF555555</item>-->
        <item name="android:textSize">13dp</item>
        <!--<item name="android:divider">@drawable/custom_tab_indicator_divider</item>-->
        <!--<item name="android:dividerPadding">10dp</item>-->
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:paddingLeft">8dp</item>-->
        <!--<item name="android:paddingRight">8dp</item>-->
        <!--<item name="android:fadingEdge">horizontal</item>-->
        <!--<item name="android:fadingEdgeLength">8dp</item>-->

    </style>
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="OTGAppUITheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
    <style name="Platform.AppCompat" parent="Platform.V14.AppCompat"/>
    <style name="Platform.AppCompat.Light" parent="Platform.V14.AppCompat.Light"/>
    <style name="Platform.V14.AppCompat" parent="Platform.V11.AppCompat">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="Platform.V14.AppCompat.Light" parent="Platform.V11.AppCompat.Light">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <!--<item name="android:actionBarStyle">@style/ActionBar</item>-->
    </style>
</resources>