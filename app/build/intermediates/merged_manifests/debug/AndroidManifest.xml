<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.knetz.kddi.app"
    android:minSdkVersion="21"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-feature android:name="android.hardware.usb.host" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <!-- <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" /> -->
    <!-- <uses-permission android:name="android.permission.READ_PHONE_STATE" /> -->
    <application
        android:name="kr.knetz.kddi.app.KNetzApp"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@mipmap/au"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/au_round"
        android:testOnly="true"
        android:theme="@style/OTGAppUITheme" >

        <!-- android:icon="@drawable/knetz_2_512" -->
        <!-- android:icon="@mipmap/ntt_docomo" -->
        <!-- android:roundIcon="@mipmap/ntt_docomo_round" -->


        <!-- android:theme="@style/StyledIndicators" -->
        <activity
            android:name="kr.knetz.kddi.app.v.MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity
            android:name="kr.knetz.kddi.app.v.h.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="kr.knetz.kddi.app.v.h.ConnectActivity"
            android:clearTaskOnLaunch="true" >
        </activity>
        <activity android:name="kr.knetz.kddi.app.v.h.FileListActivity" >
        </activity>
        <activity android:name="kr.knetz.kddi.app.v.h.HistoryActivity" >
        </activity>
        <activity
            android:name="kr.knetz.kddi.app.v.h.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog" />

        <service
            android:name="kr.knetz.kddi.app.v.h.DeviceService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="SEND_MSG_FROM_BT_ACTION" />
                <action android:name="CONNECT_REQUEST_ACTION" />
                <action android:name="DISCONNECT_REQUEST_ACTION" />
                <action android:name="START_MONITOR_ACTION" />
            </intent-filter>
        </service>

        <activity
            android:name="kr.knetz.kddi.app.v.h.SettingActivity"
            android:label="@string/title_activity_preference" >
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>